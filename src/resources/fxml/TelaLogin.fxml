            <Font name="Arial Bold" size="14.0" />
         </font>
         <effect>
            <Blend mode="RED" />
         </effect>
         <cursor>
            <Cursor fx:constant="SE_RESIZE" />
         </cursor>
      </Button>
      <Label layoutX="105.0" layoutY="362.0" text="Não tem conta? " />

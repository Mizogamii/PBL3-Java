<AnchorPane prefHeight="446.0" prefWidth="650.0" style="-fx-background-color: linear-gradient(to left, #FF1493, #FF69B4, #FFB6C1 50%, #FFFFFF 50%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projeto.frontend.view.controllers.LoginController">
   <children>
      <Label layoutX="58.0" layoutY="119.0" prefHeight="36.0" prefWidth="166.0" text="Login" textAlignment="CENTER">
         <font>
            <Font name="Arial Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="58.0" layoutY="155.0" text="Nome de usuário">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="campoLogin" layoutX="56.0" layoutY="173.0" prefHeight="26.0" prefWidth="210.0" promptText="Informe o nome do usuário" />
      <Label layoutX="56.0" layoutY="222.0" text="Senha">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
      <PasswordField fx:id="campoSenha" layoutX="56.0" layoutY="237.0" prefHeight="26.0" prefWidth="210.0" promptText="Informe sua senha" />
      <Label layoutX="169.0" layoutY="272.0" text="Esqueceu a senha? " />
